{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/LICENSE": true,
    //"**/node_modules": true
  },
  "stylelint.validate": [
    "scss",
    "sass",
    "less",
    "postcss"
  ],
  "stylelint.packageManager": "pnpm",
  "stylelint.enable": true,
  "scss.validate": false, // important to disable vscode validation
  "scss.scannerExclude": [
    "**/.git",
    "**/node_modules"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },
  "workbench.colorCustomizations": {
    "window.inactiveBorder": "#00aeff",
  },
  "[liquid]": {
    "editor.defaultFormatter": "sissel.shopify-liquid",
    "editor.formatOnSave": true
  },
  "liquid.format.rules": {
    "wrap": 0,
    "liquid": {
      "forceArgument": 3
    },
    "markup": {
      "forceAttribute": 2,
      "preserveText": true,
      "forceIndent": true
    }
  }
}