{
  "extends": "@liquify/tsconfig",
  "exclude": [
    "node_modules/**",
    "package",
    "docs"
  ],
  "include": [
    "tsup.config.ts",
    "src/**/**.ts"
  ],
  "compilerOptions": {
    "incremental": false,
    "declaration": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "removeComments": false,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
  }
}
