{
  "extends": "@liquify/tsconfig",
  "exclude": [
    "**/node_modules",
    "**/docs"
  ],
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "index.d.ts"
  ],
  "compilerOptions": {
    "incremental": false,
    "strictNullChecks": false,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "removeComments": false,
  }
}